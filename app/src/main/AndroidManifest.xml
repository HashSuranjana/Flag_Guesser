<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlagGuessefinal"
        tools:targetApi="31">
        <activity
            android:name=".AdvanceActivity"
            android:exported="false"
            android:label="@string/title_activity_advance"
            android:theme="@style/Theme.FlagGuessefinal" />
        <activity
            android:name=".HintActivity"
            android:exported="false"
            android:label="@string/title_activity_hint"
            android:theme="@style/Theme.FlagGuessefinal" />
        <activity
            android:name=".GuessFlagActivity"
            android:exported="false"
            android:label="@string/title_activity_guess_flag"
            android:theme="@style/Theme.FlagGuessefinal" />
        <activity
            android:name=".GuessActivity"
            android:exported="false"
            android:label="@string/title_activity_guess"
            android:theme="@style/Theme.FlagGuessefinal" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FlagGuessefinal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>